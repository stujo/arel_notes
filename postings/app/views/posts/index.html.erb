<h1>Posts</h1>


<div class="row">
  <% @posts.each do |post| %>
      <div class="col-xs-12 col-md-6">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= link_to post.title, post %></h3>

            <p><%= truncate(post.content, length: 100) %></p>
            <p><%= visibility_display post %></p>
            <div class="postings_actions">
              <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-default' if post.editable_by current_user %>
              <%= link_to('Destroy', post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?'}) if post.editable_by current_user %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>



